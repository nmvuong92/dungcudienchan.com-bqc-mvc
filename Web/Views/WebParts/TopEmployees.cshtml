@model List<VD.Data.Entity.TopEmployees>
<style>
    .col_top {
        border: 1px #f5f5f5 solid;
        padding: 5px;
    }
</style>
<div class="nemxam" style="margin-left: 20px;">
<div class="title">
    <h1 class="container">
        <i class="fa fa-caret-right" aria-hidden="true"></i> Top Employers
    </h1>
    <div class="row" style="max-height: 670px; overflow: auto;">
        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col_top">
                @if (!string.IsNullOrWhiteSpace(item.Link))
                {
                    <a href="@item.Link" target="_blank">
                        <img src="@item.ImagePath" alt="@item.Name" style="width: 100%; height: auto;" />
                    </a>
                }
                else
                {
                    <img src="@item.ImagePath" alt="@item.Name" style="width: 100%;height: auto;" />
                }
                
            </div>
        }
    </div>
</div>
</div>
@model Web.ViewModels.User.pLoginVM
@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}
    @using (Ajax.BeginForm("mLoginProcess", "User", new AjaxOptions()
    {
        OnSuccess = "clsUser.PloginSuccess"
    }, new
    {
        id = "login-form",
        role = "form",
        style = "display: block;",
        autocomplete="off"
    }))
    {

        @Html.HiddenFor(m => m.ReturnUrl)

        <div style="color:red;">
            @Html.ValidationSummary(false)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Username, new { tabindex = "1", @class = "form-control", @placeholder = "Username" })

        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { tabindex = "2", @class = "form-control", @placeholder = "Password" })
        </div>
        @*<div class="form-group text-center">
                <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                <label for="remember"> Remember Me</label>
            </div>*@
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary" value="Đăng nhập">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <a href="javascript:void(0);" onclick="alert('Comming soon!');" tabindex="5" class="forgot-password">Quên mật khẩu?</a> |
                        <a href="@Url.Action("PRegister")" tabindex="5" class="forgot-password">Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    }
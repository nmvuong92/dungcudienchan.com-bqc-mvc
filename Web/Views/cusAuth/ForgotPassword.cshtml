@model Web.ViewModels.FrmFogotPasswordView
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_mnqt.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h4 style="border-bottom: 1px solid #c5c5c5;">
            <i class="glyphicon glyphicon-user">
            </i>
            Account
        </h4>
        <div>
            <h4 class="">
                Forgot your password?
            </h4>
            @using (Html.BeginForm("ForgotPassword", "cusAuth", FormMethod.Post, new { @role = "form" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <span class="help-block">
                        Email address you use to log in to your account
                        <br>
                        We'll send you an email with instructions to choose a new password.
                    </span>
                    <div class="show_err" style="color:red;">
                        @Html.ValidationSummary(false)
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon">
                            @@
                        </span>
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email address" })
                    </div>


                    <div class="form-group">
                        <label class="control-label col-lg-3">Captcha <span class="required">*</span></label>
                        <div class="col-lg-9">
                            <img src="@Url.Action("CaptchaImage", "Home", new { prefix = "forgotpw" })" />
                            @Html.TextBoxFor(m => m.Captcha, new { @class = "form_captchar", @placeholder = "input captcha code" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block" id="btn-olvidado">
                        Continue
                    </button>
                    <p class="help-block">
                        <a class="text-muted" href="#" id="acceso"><small>Account Access</small></a>
                    </p>
                </fieldset>
            }
          
             

        </div>
    </div>
</div>
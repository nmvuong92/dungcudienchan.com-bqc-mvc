@model Web.ViewModels.Form.Customer.ChangePasswordView
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_mnqt.cshtml";
}


<div class="col-lg-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <!-- Nav tabs -->
    <div class="col-lg-3">
        @{Html.RenderAction("DonationLeftNav", "WebParts");}
    </div>
    <div class="col-lg-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ChangePassword", "cusAuth", FormMethod.Post, new { @role = "form", area = "",@data_confirm="Are you sure?" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ID)
                    <div class="form-group">
                        Username
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", @readonly = "readonly" })
                    </div>

                    <div class="form-group ">
                        Current password
                        @Html.PasswordFor(m => m.MatKhauCu, new { @class = "form-control" })
                    </div>

                    <div class="form-group ">
                        New password
                        @Html.PasswordFor(m => m.MatKhauMoi, new { @class = "form-control" })
                    </div>
                    <div class="form-group ">
                        Comfirm new password
                        @Html.PasswordFor(m => m.ReMatKhauMoi, new { @class = "form-control" })
                    </div>

                    <!--footer-->
                    <div class="text-center">

                        <button type="submit" class="btn btn-success btn-xl">Submit</button>


                    </div>
                    <div class="DivErrs" style="color:red;">@Html.ValidationSummary()</div>

                }
            </div>
        </div>
        <div class="col-lg-4">
        </div>
    </div>
</div>



@model Web.ViewModels.Form.FrmCusLiteRegisterView
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_mnqt.cshtml";
    List<SelectListItem> ddlCusCat = ViewBag.ddlCusCat;
}

<!--description-->
<div>
    @{Html.RenderAction("Module", "Description", new { id = 3 });}
</div>
<div class="container content">
    <div class="col-lg-12">
        <div class="panel-body">
            @using (Html.BeginForm("Register", "cusAuth", FormMethod.Post, new { @role = "form", @onsubmit = "return fnVal();" }))
            {
                <div class="show_err" style="color:red;">
                    @Html.ValidationSummary(false)
                </div>
                <div class="form-group ">
                    <label for="email" class="control-label col-lg-4">Email <span class="required">*</span></label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                    </div>
                </div>
                <div class="form-group ">
                    <label for="password" class="control-label col-lg-4">Password <span class="required">*</span></label>
                    <div class="col-lg-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group ">
                    <label for="confirm_password" class="control-label col-lg-4">Confirm Password <span class="required">*</span></label>
                    <div class="col-lg-8">
                        @Html.PasswordFor(m => m.ne_Repassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-lg-4">Captcha <span class="required">*</span></label>
                    <div class="col-lg-8">
                        <img src="@Url.Action("CaptchaImage", "Home", new { prefix = "regisss" })" />
                        @Html.TextBoxFor(m => m.Captcha, new { @class = "form_captchar" })
                    </div>
                </div>
                <div class="form-group ">
                    <label for="address" class="control-label col-lg-4">&nbsp;</label>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-primary">Join us <i class="fa fa-sign-in"></i></button>
                    </div>
                </div>
            }

        </div>


    </div>



</div>

